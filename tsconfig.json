{
  "compilerOptions": {
    "declaration": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": ["lib"]
}
